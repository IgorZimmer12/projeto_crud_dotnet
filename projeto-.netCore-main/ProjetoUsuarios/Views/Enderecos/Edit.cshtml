@model ProjetoUsuarios.Models.Endereco

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Endereço</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EnderecoId" />
            <input type="hidden" asp-for="UsuarioId" />

            <div class="mail-address">
                <div class="form-floating">
                    <input asp-for="Bairro" id="floatingInput" class="form-control" placeholder="bairro" />
                    <label asp-for="Bairro" for="floatingInput" class="control-label"></label>
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Numero" id="floatingInput" class="form-control" placeholder="Numero" />
                    <label asp-for="Numero" for="floatingInput" class="control-label"></label>
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Cidade" id="floatingInput" class="form-control" placeholder="Cidade" />
                    <label asp-for="Cidade" for="floatingInput" class="control-label"></label>
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Estado" id="floatingInput" class="form-control" placeholder="Estado" />
                    <label asp-for="Estado" for="floatingInput" class="control-label"></label>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Logradouro" id="floatingInput" class="form-control" placeholder="Logradouro" />
                    <label asp-for="Logradouro" for="floatingInput" class="control-label"></label>
                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="CEP" id="floatingInput" class="form-control" placeholder="CEP" />
                    <label asp-for="CEP" for="floatingInput" class="control-label"></label>
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group d-grid gap-2 button">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
